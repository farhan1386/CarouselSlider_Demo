@model IEnumerable<CarouselSlider_Demo.Models.ImageSlider>

@{
    ViewBag.Title = "List";
}

<h4 class="text-uppercase text-center">List of images</h4>
<a href="@Url.Action("New","ImageSlider")" class="btn btn-sm btn-primary rounded-0 text-white mb-2"><i class="fas fa-plus-circle"></i> Add New</a>
<div class="table-responsive">
    <table class="table table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.ImageName)</th>
                <th>@Html.DisplayNameFor(m => m.ImagePath)</th>
                <th>Action(s)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ImageName</td>
                    <td>
                        <img src="@Url.Content(item.ImagePath)" alt="@item.ImageName" class="img-thumbnail" width="100" height="100" />
                    </td>
                    <td>
                        <a href="@Url.Action("Details","ImageSlider",new { id=item.Id})" class="btn btn-sm btn-primary text-white"><i class="fas fa-eye"></i></a>
                        <a href="@Url.Action("Edit","ImageSlider",new { id=item.Id})" class="btn btn-sm btn-info text-white"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Delete","ImageSlider",new { id=item.Id})" class="btn btn-sm btn-danger text-white"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
